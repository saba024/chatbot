@{}
@addTagHelper *, Miscrosoft.AspNetCore.Mvc.TagHelpers
<style>
    div.panel-body {
        overflow: scroll;
        background: url('http://subtlepatterns.com/patterns/geometry2.png');
    }
</style>

<div class="chat-panel panel panel-default">
    <div class="panel-heading">
        ChatBox using SingalR
        <i class="fa fa-paper-plane fa-fw"></i>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body" id="chat" style="height:350px; width:500px">
        <input type="hidden" id="displayname" />

        <p id="discussion"></p>
    </div>
    <!-- /.panel-body -->

    <div class="panel-footer">

        <div class="input-group">
            <form asp-controller="Chat" asp-action="Send" method="POST">
                <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." />

                <span class="input-group-btn">
                    <input type="submit" class="btn btn-warning btn-sm" id="sendmessage" value="Send">

                </span>
            </form>

            <form asp-controller="Chat" asp-action="Send" method="POST">
                <div>
                    
                    <input id ="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." / />
                </div>
                <span class="input-group-btn">

                    <input type="submit" value="Send" class="btn btn-warning btn-sm" id="sendmessage">

                </span>
            </form>

        </div>

        

    </div>

</div>
<br />
<select id="group">
    <option value="All">Everyone</option>
    <option value="Myself">Myself</option>
</select>
<br />


<script src="~/lib/signalr.js"></script>
<script src="~/js/message.js"></script>